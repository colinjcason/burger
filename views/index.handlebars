<h1>Eat-Da-Burger!</h1>

<h2>Burgers ready to be eaten</h2>
<ul>
    {{#each burgers}}
        {{#unless devoured}}
        <p>{{this.burger_name}}</p>
        <button data-id="{{this.id}}" class="devour">Devour It!</button>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers already eaten</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            <p>{{this.burger_name}}</p>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger!</h2>

<form class="create-form">
   <div class="form-group">
    <label for="newBurger"></label>
    <textarea class="form-control" id="newBurger" rows="3"></textarea>
  </div>
  <button type="submit" id="burger-btn">Add Burger</button>
</form>

